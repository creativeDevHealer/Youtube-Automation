# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/youtube-comment-assistant

# YouTube API Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Email Configuration (for alerts and reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
ADMIN_EMAIL=admin@yourdomain.com

# Admin API Key (for accessing admin routes)
ADMIN_API_KEY=your_secure_admin_api_key

# Optional: Dashboard URL for thumbnail approval links
DASHBOARD_URL=http://localhost:3000/admin

# Canva API Configuration
CANVA_CLIENT_ID=your_canva_client_id
CANVA_CLIENT_SECRET=your_canva_client_secret
CANVA_REDIRECT_URI=http://127.0.0.1:3001/oauth/redirect
CANVA_REFRESH_TOKEN=your_canva_refresh_token

# Canva Template IDs for different video types
CANVA_WEEKLY_TEMPLATE_ID=your_weekly_forecast_template_id
CANVA_BONUS_TEMPLATE_ID=your_bonus_video_template_id
CANVA_LIVE_TEMPLATE_ID=your_livestream_template_id
CANVA_REGULAR_TEMPLATE_ID=your_regular_video_template_id 