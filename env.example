# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/youtube-comment-assistant

# YouTube API Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Email Configuration (for alerts and reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
ADMIN_EMAIL=admin@yourdomain.com

# Admin API Key (for accessing admin routes)
ADMIN_API_KEY=your_secure_admin_api_key

# Optional: Dashboard URL for thumbnail approval links
DASHBOARD_URL=http://localhost:3000/admin 